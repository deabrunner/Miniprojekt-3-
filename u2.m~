load snakecoord

s = 1:6;
se = linspace(1,6,100)
gx =interp1(s,xsnake(10,:),se,'spline');
gy =interp1(s,ysnake(10,:),se,'spline');
px = xsnake(10,:);
py = ysnake(10,:);


noT = [20,40,60,80]

xs=min(min(xsnake))-0.1;
xe=max(max(xsnake))+0.1;
ys=min(min(ysnake))-0.1;
ye=max(max(ysnake))+0.1;

for ti=1:noT
    hold off;
    gx =interp1(s,xsnake(ti,:),se,'spline');
    gy =interp1(s,ysnake(ti,:),se,'spline');
    px = xsnake(ti,:);
    py = ysnake(10,:);
    plot(xsnake(ti,:),ysnake(ti,:),'k');
    axis('image');
    axis([xs xe ys ye]);
    axis('off');
    MV(ti)=getframe;
end;
movie(MV);

figure;
plot(gx,gy) 
hold on
plot(px,py,'o')
